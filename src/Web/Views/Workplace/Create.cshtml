@model Model.Views.TooaegCreate
@using Web.Code

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @foreach (var message in Model.Messages)
        {
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @message.Text
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.ValitudProjektNr, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ProjektideDropDown((int)Session["user_id"])
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Algus, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Algus, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lopp, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Lopp, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Kirjeldus, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Kirjeldus, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lisa" class="btn btn-primary" /> |
                @Html.ActionLink("Katkesta", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
